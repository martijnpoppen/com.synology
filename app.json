{
  "id": "com.synology",
  "version": "1.6.3",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#000000",
  "name": {
    "en": "Synology",
    "nl": "Synology",
    "de": "Synology"
  },
  "description": {
    "en": "The next step in data storage starts here",
    "nl": "De volgende stap in gegevensbeheer begint hier",
    "de": "Der nÃ¤chste Schritt der Datenspeicherung beginnt hier"
  },
  "category": [
    "security"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Martijn Poppen",
    "email": "synology@martijnpoppen.nl"
  },
  "contributors": {
    "developers": [
      {
        "name": "Martijn Poppen",
        "email": "synology@martijnpoppen.nl"
      }
    ],
    "translators": [
      {
        "name": "ðŸ‡¬ðŸ‡§ Martijn Poppen"
      },
      {
        "name": "ðŸ‡³ðŸ‡± Martijn Poppen"
      },
