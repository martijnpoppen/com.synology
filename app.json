      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "martijnpoppen"
      }
    }
  },
  "bugs": {
    "url": "https://community.athom.com/t/app-synology-diskstation/49744"
  },
  "source": "https://github.com/martijnpoppen/com.synology",
  "homeyCommunityTopicId": 49744,
  "support": "https://community.athom.com/t/app-synology-diskstation/49744",
  "discovery": {
    "diskstation_discovery": {
      "type": "mdns-sd",
      "mdns-sd": {
        "protocol": "tcp",
        "name": "_http"
      },
      "id": "{{txt.id}}"
    }
  },
  "drivers": [
    {
      "id": "DiskStation",
      "class": "homealarm",
      "connectivity": [
        "lan",
        "cloud"
      ],
      "capabilities": [
        "onoff",
        "action_reboot",
        "action_update_data",
        "alarm_heat",
        "measure_temperature",
        "measure_uptime",
        "measure_disk_usage",
        "measure_cpu_usage",
        "measure_ram_usage"
      ],
      "energy": {
        "approximation": {
          "usageOn": 30,
          "usageOff": 1
        }
      },
      "name": {
        "en": "Synology DiskStation",
        "nl": "Synology DiskStation",
        "de": "Synology DiskStation"
      },
      "images": {
        "large": "drivers/DiskStation/assets/images/large.png",
        "small": "drivers/DiskStation/assets/images/small.png"
      },
      "pair": [
        {
          "id": "login_synology"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "login_synology",
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "nl": "Algemene instellingen",
            "de": "Allgemeine Einstellungen"
          },
          "children": [
            {
              "id": "override_onoff",
              "type": "checkbox",
              "label": {
                "en": "Always on",
                "nl": "Altijd aan",
                "de": "Immer an"
              },
              "value": false
            },
            {
              "id": "update_interval",
              "type": "number",
              "label": {
                "en": "Update interval",
                "nl": "Update interval",
                "de": "Update intervall"
              },
              "min": 30,
              "max": 3600,
              "units": {
                "en": "seconds",
                "nl": "seconden",
                "de": "Sekunden"
              },
              "value": 120
            },
            {
              "id": "enable_interval",
              "type": "checkbox",
              "label": {
                "en": "Enable automatic data",
                "nl": "Automatische gegevens ophalen",
                "de": "Automatische Daten abrufen"
              },
              "value": true
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Login settings",
            "nl": "Login instellingen",
            "de": "Login Einstellungen"
          },
          "children": [
            {
              "id": "mac",
              "type": "text",
              "label": {
                "en": "MAC Addres",
                "nl": "MAC Adres",
                "de": "MAC-Adresse"
              },
              "value": ""
            },
            {
              "id": "ip",
              "type": "text",
              "label": {
                "en": "IP Address",
                "nl": "IP Adres",
                "de": "IP-Adresse"
              },
              "value": ""
            },
            {
              "id": "port",
              "type": "number",
              "label": {
                "en": "Port",
                "nl": "Poort",
                "de": "Port"
              },
              "value": 5000
            },
            {
              "id": "secure",
              "type": "checkbox",
              "label": {
                "en": "SSL",
                "nl": "SSL",
                "de": "SSL"
              },
              "value": false
            },
            {
              "id": "user",
              "type": "text",
              "label": {
                "en": "User",
                "nl": "Gebruiker",
                "de": "Benutzer"
              },
              "value": ""
            },
            {
              "id": "passwd",
              "type": "password",
              "label": {
                "en": "Password",
                "nl": "Wachtwoord",
                "de": "Passwort"
              },
              "value": ""
            },
            {
              "id": "debug",
              "type": "checkbox",
              "label": {
                "en": "Debug Logs",
                "nl": "Debug Logs",
                "de": "Debug Logs"
              },
              "value": false
            }
          ]
        }
      ]
    }
  ],
  "flow": {
    "actions": [
      {
        "id": "action_reboot_flow",
        "title": {
          "en": "Reboot",
          "nl": "Herstarten",
          "de": "Neustarten"
        },
        "titleFormatted": {
          "en": "[[device]] Reboot",
          "nl": "[[device]] Herstarten",
          "de": "[[device]] Neustarten"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "capabilities=action_reboot"
          }
        ]
      },
      {
        "id": "action_update_data_flow",
        "title": {
          "en": "Update data",
          "nl": "Data updaten",
          "de": "Daten aktualisieren"
        },
        "titleFormatted": {
          "en": "[[device]] Update data",
          "nl": "[[device]] Data updaten",
          "de": "[[device]] Daten aktualisieren"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "capabilities=action_update_data"
          }
        ]
      }
    ]
  },
  "capabilities": {
    "measure_uptime": {
      "type": "number",
      "title": {
        "en": "Up-Time",
        "nl": "Online tijd",
        "de": "Laufzeit"
      },
      "units": {
        "en": "Hours",
        "nl": "Uur",
        "de": "Stunden"
      },
      "insights": true,
      "desc": {
        "en": "Up-Time in hours",
        "nl": "Online tijd in uren",
        "de": "Laufzeit in Stunden"
      },
      "chartType": "spline",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/stopwatch.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_uptime_changed",
            "title": {
              "en": "The uptime has changed",
              "nl": "De online tijd is veranderd",
              "de": "Die Laufzeit hat sich geÃ¤ndert"
            },
            "tokens": [
              {
                "name": "measure_uptime",
                "title": {
                  "en": "Up-Time",
                  "nl": "Online tijd",
                  "de": "Laufzeit"
                },
                "type": "number",
                "example": 99
              }
            ]
          }
        ]
      }
    },
    "measure_disk_usage": {
      "type": "number",
      "title": {
        "en": "Disk Usage",
        "nl": "Schijf gebruik",
        "de": "Festplattenbelegung"
      },
      "units": {
        "en": "%",
        "nl": "%",
        "de": "%"
      },
      "insights": true,
      "desc": {
        "en": "Disk Usage in %",
        "nl": "Schijf gebruik in %",
        "de": "Festplattenbelegung in %"
      },
      "chartType": "spline",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/disc-fill.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_disk_usage_changed",
            "title": {
              "en": "Disk Usage has changed",
              "nl": "Schijf gebruik is veranderd",
              "de": "Festplattenbelegung hat sich verÃ¤ndert"
            },
            "tokens": [
              {
                "name": "measure_disk_usage",
                "title": {
                  "en": "Disk Usage",
                  "nl": "Schijf gebruik",
                  "de": "Festplattenbelegung"
                },
                "type": "number",
                "example": 99
              }
            ]
          }
        ]
      }
    },
    "measure_cpu_usage": {
      "type": "number",
      "title": {
        "en": "CPU Usage",
        "nl": "CPU gebruik",
        "de": "CPU-Auslastung"
      },
      "units": {
        "en": "%",
        "nl": "%",
        "de": "%"
      },
      "insights": true,
      "desc": {
        "en": "CPU Usage in %",
        "nl": "CPU gebruik in %",
        "de": "CPU-Auslastung in %"
      },
      "chartType": "spline",
      "decimals": 1,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/cpu-fill.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_CPU_usage_changed",
            "title": {
              "en": "CPU Usage has changed",
              "nl": "CPU gebruik is veranderd",
              "de": "CPU-Auslastung hat sich verÃ¤ndert"
            },
            "tokens": [
              {
                "name": "measure_cpu_usage",
                "title": {
                  "en": "CPU Usage",
                  "nl": "CPU gebruik",
                  "de": "CPU-Auslastung"
                },
                "type": "number",
                "example": 99
              }
            ]
          }
        ]
      }
    },
    "measure_ram_usage": {
      "type": "number",
      "title": {
        "en": "RAM Usage",
        "nl": "RAM gebruik",
        "de": "RAM-Auslastung"
      },
      "units": {
        "en": "%",
        "nl": "%",
        "de": "%"
      },
      "insights": true,
      "desc": {
        "en": "RAM Usage in %",
        "nl": "RAM gebruik in %",
        "de": "RAM-Auslastung in %"
      },
      "chartType": "spline",
      "decimals": 1,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/lightning-charge.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_ram_usage_changed",
            "title": {
              "en": "RAM Usage has changed",
              "nl": "RAM gebruik is veranderd",
              "de": "RAM-Auslastung hat sich verÃ¤ndert"
            },
            "tokens": [
              {
                "name": "measure_ram_usage",
                "title": {
                  "en": "RAM Usage",
                  "nl": "RAM gebruik",
                  "de": "RAM-Auslastung"
                },
                "type": "number",
                "example": 99
              }
            ]
          }
        ]
      }
    },
    "action_reboot": {
      "type": "boolean",
      "title": {
        "en": "Reboot",
        "nl": "Herstarten",
        "de": "Neustarten"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button"
    },
    "action_update_data": {
      "type": "boolean",
      "title": {
        "en": "Update data",
        "nl": "Data updaten",
        "de": "Daten aktualisieren"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button"
    }
  }
}